exe_file="lab3"
main_dir=$(pwd)
tmp_dir="${main_dir}/build"

mkdir ${tmp_dir}
cd ${tmp_dir}

cmake ${main_dir}
make

mv ${exe_file} ${main_dir}

cd ${main_dir}

while [ -n "$1" ]
do
    case "$1" in
        -c) 
            clear
        ;;
        -d)
            rm -rf ${tmp_dir}
        ;;
        -i)
            input_src="in/$2"
            ./${exe_file} < ${input_src}
            rm -rf ${exe_file}
        ;;
        -o)
            output_src="out/$2"
            ./${exe_file} > ${output_src}
            rm -rf ${exe_file}
        ;;
        -io)
            input_src="in/$2"
            output_src="out/$3"
            ./${exe_file} < ${input_src} > ${output_src}
        ;;
        -mc)
            valgrind --tool=memcheck ./${exe_file}
        ;;
        *)
            
        ;;
    esac
    shift
done